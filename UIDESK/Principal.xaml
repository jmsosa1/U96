                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                  
                        <StackPanel Grid.Column="0">
                            <Image Source="/imagenes/logo-sahm-blanco.jpg" Width="200"/>
                        </StackPanel>
                    
                  

