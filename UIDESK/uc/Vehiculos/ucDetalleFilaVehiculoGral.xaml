                    <TextBox Text="{Binding Path=DescriFoto}" IsReadOnly="True" 
                             materialDesign:HintAssist.Hint="Descripcion" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        HorizontalAlignment="Left"  Margin="612,90,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="300" Height="100"/>
                    <TextBox Text="{Binding Path=AltaF, StringFormat=d, ConverterCulture=es-Ar}" IsReadOnly="True"
                             materialDesign:HintAssist.Hint="Fecha" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        HorizontalAlignment="Left"  Margin="612,15,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>

                </Grid>
            </TabItem>
            <TabItem Header="Repuestos">
                <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ToolBar Name="tbRepuestos" Grid.Row="0"  Style="{StaticResource MaterialDesignToolBar}" ClipToBounds="False">
                            <Button Name="btnAddRepuesto" Padding="2" Margin="5"
                                    Click="BtnAddRepuesto_Click" >
                                <materialDesign:PackIcon Kind="PlusCircle"/>
                            </Button>
                            
                            <Button Name="btnDelRepuesto" Padding="2" Click="BtnDelRepuesto_Click">
                                <materialDesign:PackIcon Kind="Delete"/>
                            </Button>
                        <Separator Width="3" Background="OrangeRed"/>
                        <Button Name="btnImprimirRepuestos" Click="BtnImprimirRepuestos_Click" Padding="2" 
                                    ToolTip="Imprimir listado de Repuestos">
                            <materialDesign:PackIcon Kind="Printer"/>
                        </Button>
                    </ToolBar>
                        <DataGrid Name="dgRepuestos" Grid.Row="1"  AutoGenerateColumns="False" CanUserAddRows="False"
                          CanUserDeleteRows="False" IsReadOnly="True" Margin="5"
                             RowDetailsVisibilityMode="VisibleWhenSelected" SelectionMode="Single"
                            materialDesign:DataGridAssist.CellPadding="4,2,2,2" VerticalScrollBarVisibility="Visible"
                            materialDesign:DataGridAssist.ColumnHeaderPadding="4,2,2,2"  >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Path=IdProducto}" Width="70"/>
                                <DataGridTextColumn Header="Nombre" Binding="{Binding Path= Nombre}" Width="100"/>
                                <DataGridTextColumn Header="Modelo" Binding="{Binding Path=Modelo}" Width="100"/>
                                <DataGridTextColumn Header="CodInventario" Binding="{Binding Path=CodInventario}" Width="100"/>
                                <DataGridTextColumn Header="NumeroSerie" Binding="{Binding Path=NumSerie}" Width="100"/>
                                <DataGridTextColumn Header="Descripcion" Binding="{Binding Path=Descripcion}" Width="150"/>
                            <DataGridTextColumn Header="Marca" Binding="{Binding Path=Marca}" Width="100"/>
                            <DataGridTextColumn Header="PrecioUnit" Binding="{Binding Path=PrecioUnit, ConverterCulture=es-AR, StringFormat=C}"/>
                                <DataGridTextColumn Header="CostoReposicion" Binding="{Binding Path=CostRepo,ConverterCulture=es-Ar,StringFormat=C}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1">
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="Repuestos registrados:" Margin="10,5,0,0"></TextBlock>
                            <TextBlock Name="txb1" Margin="5,5,0,0"></TextBlock>
                            <TextBlock Text="Costo total:" Margin="10,5,0,0"></TextBlock>
                            <TextBlock Name="txb2" Margin="5,5,0,0" ></TextBlock>
                            <TextBlock Text="Costo Reposicion total:" Margin="10,5,0,0"></TextBlock>
                            <TextBlock Name="txb3" Margin="5,5,0,0"></TextBlock>
                        </StackPanel>
                    </Border>
                       
                    </Grid>
                
            </TabItem>
            <TabItem Header="Plan Inspecion">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ToolBar Name="tbPlan" Grid.Row="0" Margin="5" Style="{StaticResource MaterialDesignToolBar}" ClipToBounds="False" >
                        
                        <Button Name="btnAddTareaPLan" Margin="10,2,2,2"  ToolTip="Agregar Tarea" Padding="2" Click="BtnAddTareaPLan_Click">
                            <materialDesign:PackIcon Kind="PlusCircle"/>
                        </Button>
                        <Button Name="btnDeleteTareaPLan" Margin="10,2,2,2" ToolTip="Quitar Tarea" Padding="2" Click="BtnDeleteTareaPLan_Click">
                            <materialDesign:PackIcon Kind="Delete"/>
                        </Button>
                        <Separator Width="2" Background="OrangeRed"></Separator>
                        <Button x:Name="btnCrearTareaMante" Margin="10,2,2,2" ToolTip="Crear Tarea de Mantenimiento" Padding="2" 
                                Click="BtnCrearTareaMante_Click">
                            <materialDesign:PackIcon Kind="Wrench"/>
                        </Button>
                    </ToolBar>
                    <DataGrid Name="dgPlanInspeccion" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False"
                             CanUserDeleteRows="False" IsReadOnly="True" Margin="5"
                             RowDetailsVisibilityMode="VisibleWhenSelected" SelectionMode="Single"
                             VerticalScrollBarVisibility="Visible" materialDesign:DataGridAssist.CellPadding="4,2,2,2"
                             materialDesign:DataGridAssist.ColumnHeaderPadding="4,2,2,2"  >
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Style.Triggers>

                                    <DataTrigger Binding="{Binding Estado}" Value="1">
                                        <Setter Property="Background" Value="GreenYellow"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Estado}" Value="2">
                                        <Setter Property="Background" Value="Gold"/>
                                    </DataTrigger>
                                    <DataTrigger  Binding="{Binding Estado}" Value="3">
                                        <Setter Property="Background" Value="#FFE83838"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Estado}" Value="4">
                                        <Setter Property="Background" Value="LightBlue"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Path= Idplan}" ></DataGridTextColumn>
                            <DataGridTextColumn Header="Descripcion Tarea" Binding="{Binding Path=Tarea}" Width="250"/>
                            <DataGridTextColumn Header="Atributo" Width=" 90" Binding="{Binding Path=AtributoComparativo}"/>
                            <DataGridTextColumn Header="Valor Inicio" Width="90" Binding="{Binding Path=ValorInicio,StringFormat=N0,ConverterCulture=es-AR}"/>
                            <DataGridTextColumn Header="Valor Limite" Width="90" Binding="{Binding Path=ValorLimiteComparativo,StringFormat=N0,ConverterCulture=es-AR}"/>
                            <DataGridTextColumn Header="Valor Actual " Width="90" Binding="{Binding Path=ValorActualComparativo,StringFormat=N0,ConverterCulture=es-AR}"/>
                            <DataGridTextColumn Header="GAP" Width="90" Binding="{Binding Path=Gap,StringFormat=N0,ConverterCulture=es-AR}"/>
                            <DataGridTextColumn Header="Valor Control" Width="90" Binding="{Binding Path=ValorConstante,StringFormat=N0,ConverterCulture=es-AR}"/>
                            <DataGridTextColumn Header="Situacion" Binding="{Binding Path=SituacionTarea}"/>
                            <DataGridTextColumn Header="Actualizacion" Width="90" Binding="{Binding Path=Ultima_actualizacion,ConverterCulture=es-Ar,StringFormat=d}"/>
                            <DataGridTextColumn Header="N° OTM" Binding="{Binding Path=IdOtm}"/>
                        </DataGrid.Columns>
                        
                    </DataGrid>
                    <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1">
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="Data info:" Margin="10,5,0,0"></TextBlock>
                            <TextBlock Name="txbdata1" Margin="5,5,0,0"></TextBlock>
                            <TextBlock Text="Data info:" Margin="10,5,0,0"></TextBlock>
                            <TextBlock Name="txbdata2" Margin="5,5,0,0" ></TextBlock>
                            <TextBlock Text="Data info" Margin="10,5,0,0"></TextBlock>
                            <TextBlock Name="txbdata3" Margin="5,5,0,0"></TextBlock>
                        </StackPanel>
                    </Border>
                    
                </Grid>
            </TabItem>


        </TabControl>
    </Grid>
</UserControl>
